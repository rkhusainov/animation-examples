<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shared_element_transition.fragment.SharedElementTransitionFragment">

    <ImageView
        android:id="@+id/dragon_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/android_image"
        android:src="@drawable/ic_rainbow_dragon"
        android:transitionName="shared_transition_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/click_on_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dragon_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>